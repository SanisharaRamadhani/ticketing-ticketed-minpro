generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"

  url      = "mysql://root:Fisika16*@localhost:3306/mydb"

}

  model Sample {
  id        Int      @id @default(autoincrement())
  name      String
  code      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  

  @@map("samples") // if you want to use snake_case format
}



model Event {
  id          Int @id @default(autoincrement())
  tittle      String
  description String @db.Text
  img String
  date_event String
  price_type EventType
  price       Int
  place String
  seats Int
  terms String
  time        String
  rating      Float?
  category   CategoryType
  available   Boolean @default(true)

  createAt    DateTime @default(now())
  updatedAt   DateTime? @updatedAt 
 
}
enum EventType {
  FREE
  PAID
}

enum CategoryType {
  Hobby
  Concert
  Attraction
  Beauty
  
}


enum EventStatus {
  AVAILABE
  UNAVAILABLE
}

model User {
  id          Int @id   @default(autoincrement())
  firstName   String
  lastName    String
  phoneNumber String
  email       String    @unique
  password    String
  role        Role      @default(USER)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Role {
  USER
  ORGANIZER
}
